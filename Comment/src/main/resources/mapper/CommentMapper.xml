<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.comment.dao.CommentDao">
    <select id="getAnswerCommentLevelOne" resultType="answerCommentLevelOne">
        select * from answer_comment_level_one
        where answerId = #{answerId}
        order by supportSum desc, id asc
        limit #{start},10
    </select>
    <select id="getAnswerCommentLevelTwo" resultType="answerCommentLevelTwo">
        select * from answer_comment_level_two
        where levelOneId = #{levelOneId}
        order by id asc
        limit #{start},10
    </select>
    <insert id="addAnswerCommentLevelOne">
        insert into answer_comment_level_one
        (answerId,userId,content,time) values
        (#{answerId},#{userId},#{content},now())
    </insert>
    <select id="answerCommentLevelOneExist" resultType="java.lang.Long">
        select id from answer_comment_level_one where id = #{commentLevelOneId}
    </select>

    <insert id="addAnswerCommentLevelTwo">
        insert into answer_comment_level_two(levelOneId,replyToUserId,replyUserId,content,time)
        values (#{commentLevelOneId},#{replyUserId},#{userId},#{content},now())
    </insert>

    <update id="updateAnswerCommentLv1ReplySum">
        update answer_comment_level_one set hasReply = hasReply+1
        where id = #{commentLevelOneId}
    </update>

    <delete id="deleteAnswerCommentLevelTwo">
        delete from answer_comment_level_two where id = #{commentLevelTwoId}
    </delete>

    <select id="getAnswerCommentLvTwoIdFromLvOneId" resultType="java.lang.Long">
        select id from answer_comment_level_two where levelOneId = #{levelOneId}
    </select>
</mapper>
