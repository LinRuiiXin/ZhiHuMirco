<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.question.dao.TypeRecordDao">
    <select id="queryUserTypeRecord" resultType="java.lang.Long">
        select typeId from type_record where userId = #{userId} order by id desc limit 0,5
    </select>
    <insert id="addUserTypeRecord">
        insert into type_record(userId,typeId,time) values (#{userId},#{typeId},now())
    </insert>
</mapper>